    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
      <div class="col">
        <div class="news mt-3">
          <h5 class="card-title">No Notes Found</h5>
        </div>
      </div>
    </div>
  </div>
<% } %>

