  <% if (!currentUser) { %>
  <div class="container-fluid">
    <a class="navbar-brand" href="/user/${req.user._id}"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon "></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/${req.user._id}">Home</a>
        </li>
      </ul>
      <div class="navbar-nav  login-btns" id="navbarNav">
        <a class="nav-link add-notes-link" href="/user/${req.user._id}/complete"> &nbsp; &nbsp;Completed Notes </a>
      </div>  
      <!-- for adding notes and todos -->
      <div class="navbar-nav  login-btns" id="navbarNav">
        <a class="nav-link add-notes-link" href="/user/${req.user._id}/new"> <i class="fa-solid fa-plus add"></i> &nbsp; &nbsp;Add Notes </a>
        <!-- <a class="nav-link delete-all-link cursor-pointer" href="/user/${req.user._id}/todos">Add Todo</a> -->
      </div>  

      <div class="navbar-nav ms-auto login-btns" id="navbarNav">
        <% if(!currentUser){ %>
          <a class="nav-link" aria-current="page" href="/signup">Sign-up</a>
          <a class="nav-link" href="/login">Login</a>
        <% } %>
        <% if(currentUser){ %>
          <a class="nav-link logout-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
  <% }else{ %>
  <div class="container-fluid">
    
    <a class="navbar-brand " href="/"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon "></span>
    </button>
    <button onclick="onChangeBtn()" class="custom-darkmode"></button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/<%= req.user._id %>">Home</a>
        </li>
      </ul>
      <div class="navbar-nav  login-btns">
        <a class="nav-link add-notes-link" href="/user/<%= req.user._id %>/complete"> &nbsp; &nbsp;Completed Notes </a>
      </div>  
      <div class="navbar-nav  login-btns">
        <a class="nav-link add-notes-link" href="/user/<%= req.user._id %>/freetime/"> &nbsp; &nbsp;Free Time </a>
      </div>

      <!-- for adding notes and todos -->
      <div class="navbar-nav  login-btns">
        <a class="nav-link add-notes-link" href="/user/<%= req.user._id %>/new"> <i class="fa-solid fa-plus add"></i> &nbsp; &nbsp;Add Notes </a>
        <!-- <a class="nav-link delete-all-link cursor-pointer" href="/user/<%= req.user._id %>/todos">Add Todo</a> -->
      </div>  

      <form id="searchForm" class="d-flex ms-auto" role="search" action="/user/<%= req.user._id %>/search" method="GET">
        <input class="form-control sixe me-2 ql-size-small search-inp" type="search" id="searchInput" name="title" placeholder="Date(MM-DD) or title" aria-label="Search">
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>

      <div class="navbar-nav ms-auto login-btns">
        <% if(!currentUser){ %>
          <a class="nav-link" aria-current="page" href="/signup">Sign-up</a>
          <a class="nav-link" href="/login">Login</a>
        <% } %>
        <% if(currentUser){ %>
          <a class="nav-link logout-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
  <script>
    let dark = document.getElementsByTagName('html')[0]
    let isDarkMode = true;
    function onChangeBtn() {
      if (isDarkMode) {
          lightTheme();
      } else {
          darkTheme();
      }
      isDarkMode = !isDarkMode;
  }

  function lightTheme() {
      dark.classList.remove('dark');
  }

  function darkTheme() {
      dark.classList.add('dark');
  }
    if(currentUser){
      let searchForm = document.getElementById('searchForm');
      searchForm.addEventListener('submit', function (event) {
        event.preventDefault(); 
        const inputValue = document.getElementById('searchInput').value;
        window.location.href = `/user/<%= req.user._id %>/search/${inputValue}`;
      });
    }
  </script>
  <% } %>
