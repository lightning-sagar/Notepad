
<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #ff2e33;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  .search-div {
    margin-right: 17rem;
  }

@media (max-width: 1000px) {
    .search-div {
      margin-right: 0;
    }
    .navbar-collapse {
      position: absolute;
      top: 56px; /* Adjust this value based on your design */
      left: 0;
      right: 0;
      background-color: #fff; /* Set a background color for the collapsed menu */
      z-index: 1000;
      box-shadow: 0 4px 2px -2px gray; /* Add a box shadow for a separation effect */
    }
    .login-btns {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      margin-top: 1rem;
    }

    .navbar-nav {
      flex-direction: column;
      align-items: flex-end;
    }

    .navbar-toggler {
      order: -1;
    }

    .navbar-nav.login-btns {
      order: 2;
      margin-top: 0;
    }

    .navbar-nav.login-btns .nav-link {
      margin-bottom: 0.5rem;
    }

    .search-btn {
      padding: 0.5rem 1rem;
      display: none;

    }

    .search-inp {
      padding: 0.5rem;
      display: none;
    }
  }

  .delete-forms {
    display: flex;
    align-items: center;
    margin-right: 1rem;
  }

  .delete-forms p {
    margin-right: 0.5rem;
    cursor: pointer;
    font-weight: bold;
  }

  .delete-forms i {
    font-size: 1.5rem;
    cursor: pointer;
    opacity: 0.7;
  }

  .del {
    color: #d9534f; /* Bootstrap's danger color */
  }

  .nav-link {
    font-weight: bold;
    margin-right: 1rem;
    color: #333;
  }

  .add {
    color: #5bc0de; /* Bootstrap's info color */
  }

  .logout-link {
    color: #d9534f; /* Bootstrap's danger color */
  }
</style>

<nav class="navbar navbar-expand-md navbar-light bg-body-light sticky-top border-bottom">
  <div class="container-fluid">
    <a class="navbar-brand" href="/user/${req.user._id}"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon "></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/${req.user._id}">Explore</a>
        </li>
      </ul>
      <div class="navbar-nav  login-btns" id="navbarNav">
        <a class="nav-link add-notes-link" href="/user/${req.user._id}/new">Add Notes &nbsp; <i class="fa-solid fa-plus add"></i></a>
        <a class="nav-link delete-all-link cursor-pointer" href="/user/${req.user._id}/todos">Add Todo</a>

      </div>
      <form id="searchForm" class="d-flex ms-auto" role="search">
        <input class="form-control me-2 search-inp" type="search" id="searchInput" placeholder="Search-destination" aria-label="Search">
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>

      <div class="navbar-nav ms-auto login-btns" id="navbarNav">
        <% if(!currentUser){ %>
          <a class="nav-link" aria-current="page" href="/signup">Sign-up</a>
          <a class="nav-link" href="/login">Login</a>
        <% } %>
        <% if(currentUser){ %>
          <a class="nav-link logout-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-e0e56b5b212aa50515553528fd6490f55f97c6a9f723d919484f9c35a06d72b9" crossorigin="anonymous"></script>